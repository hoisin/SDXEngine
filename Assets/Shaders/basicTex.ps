//////////////
// TYPEDEFS //
//////////////
struct PSInput
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};

Texture2D shaderTexture;
SamplerState sampState;

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 Main(PSInput input) : SV_TARGET
{
	float4 texColor;

    texColor = shaderTexture.Sample(sampState, input.tex);

    return texColor;
}


